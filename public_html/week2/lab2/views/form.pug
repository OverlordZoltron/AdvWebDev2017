extends layout

block content
  .container-fluid
    h1.text-center= title
    .row
        .col-md-6.mr-auto.ml-auto
            form(action="/results", method="post")
                .form-group
                    label.formLabels(for="name") Name:
                    input.form-control(type="text", name="name")
                .form-group
                    label.formLabels(for="email") Email:
                    input.form-control(type="text", name="email")
                .form-group
                    label.formLabels(for="comments") Comments:
                    textarea.form-control(rows="1", name="comments")
                .form-group
                    input.btn.btn-primary.float-right(type="submit" value="Submit")
    .row
        .col-md-6.mr-auto.ml-auto
            p.text-center.formParagraph
              a.links(href="./") Index
              a.links(href="./about") About
              a.links(href="./form") Form